generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @unique @default(uuid())
  username     String        @unique
  email        String        @unique
  displayName  String
  displayImage String
  saved        Post[]
  upvotes      Upvote[]
  downvotes    Downvote[]
  achievements Achievement[]
  Trophies     Trophy[]
  Awards       Award[]
  Community    Community?    @relation(fields: [communityId], references: [id])
  communityId  String?
  Comments     Comments[]
}

model Post {
  id            String     @id @unique @default(uuid())
  title         String
  description   String
  upvotes       Upvote[]
  downvotes     Downvote[]
  createdBy     User       @relation(fields: [userId], references: [id])
  lastUpdatedAt DateTime
  isNSFW        Boolean
  usClosed      Boolean
  community     Community  @relation(fields: [communityId], references: [id])
  communityId   String
  userId        String
  Comments      Comments[]
}

model Comments {
  id             String   @id @unique @default(uuid())
  description    String
  post           Post     @relation(fields: [postId], references: [id])
  postId         String
  upvotesCount   Int
  downvotesCount Int
  isDeleted      Boolean
  awards         Award[]
  createdAt      DateTime
  createdBy      User     @relation(fields: [userId], references: [id])
  userId         String
}

model Community {
  id           String   @id @unique @default(uuid())
  username     String
  displayName  String
  isNSFW       Boolean
  createdBy    String
  createdAt    DateTime
  displayImage String
  bannerImage  String
  admins       User[]
  Post         Post[]
}

model Achievement {
  id          String  @id @unique @default(uuid())
  title       String
  description String
  imageURL    String
  User        User?   @relation(fields: [userId], references: [id])
  userId      String?
}

model Trophy {
  id          String  @id @unique @default(uuid())
  title       String
  description String
  imageURL    String
  User        User?   @relation(fields: [userId], references: [id])
  userId      String?
}

model Award {
  id          String    @id @unique @default(uuid())
  title       String
  description String
  imageURL    String
  User        User?     @relation(fields: [userId], references: [id])
  userId      String?
  Comments    Comments? @relation(fields: [commentsId], references: [id])
  commentsId  String?
}

model Upvote {
  id          String   @id @unique @default(uuid())
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String   @unique
  createdAt   DateTime
  parent      Post     @relation(fields: [parentId], references: [id])
  parentId    String
}

model Downvote {
  id          String   @id @unique @default(uuid())
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String   @unique
  createdAt   DateTime
  parent      Post     @relation(fields: [parentId], references: [id])
  parentId    String
}
